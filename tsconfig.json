{
    "compilerOptions": {
      "module": "commonjs",
      "outDir": "./out",                        /* Redirect output structure to the directory. */
      "rootDir": "./src",    
      "moduleResolution": "node",
      "target": "es2016",
      "lib": [
        "es2016"
      ],
      "noImplicitAny": false,
      "sourceMap": true,
      "inlineSources": true,
      "types" : [
        "node"
      ],
      "typeRoots": [
        "./typings"
      ]
    },
    "exclude":[
      "node_modules",
      "dist"
    ],
    "include": [
      "./src/**/*"
    ]
  }